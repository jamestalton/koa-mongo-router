{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "allowJs": false,
        "sourceMap": true,
        "declaration": true,
        "alwaysStrict": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./lib",
        "noImplicitUseStrict": true
    },
    "include": ["src/**/*.ts"]
}
